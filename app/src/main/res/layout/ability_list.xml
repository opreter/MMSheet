<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/black"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/textView_ability_name"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:text="名称："
			android:textColor="@color/black"
			android:textSize="20sp" />

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/black"
			/>

		<CheckBox
			android:id="@+id/checkBox_ability"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right"
			android:text="削除" />

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/black"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical">

		<TextView
			android:id="@+id/textView_ability_sp"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:text="消費SP："
			android:textColor="@color/black"
			android:textSize="20sp"/>

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/black"
			/>

		<TextView
			android:id="@+id/textView_ability_mp"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:text="MP："
			android:textColor="@color/black"
			android:textSize="20sp" />
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/black"
		/>

	<TextView
		android:id="@+id/textView_ability_mclass"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="0dp"
		android:text="分類："
		android:textColor="@color/black"
		android:textSize="20sp" />

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/black"
		/>

	<TextView
		android:id="@+id/textView_ability_timing"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="0dp"
		android:text="使用タイミング："
		android:textColor="@color/black"
		android:textSize="20sp" />

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/black"
		/>

	<TextView
		android:id="@+id/textView_ability_terms"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="0dp"
		android:text="使用条件："
		android:textColor="@color/black"
		android:textSize="20sp" />

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/black"
		/>

	<TextView
		android:id="@+id/textView_ability_memo"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="0dp"
		android:text="効果："
		android:textColor="@color/black"
		android:textSize="20sp" />

</LinearLayout>