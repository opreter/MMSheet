<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>

	<TextView
		android:id="@+id/textView_wepon_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="0dp"
		android:gravity="center"
		android:text="武装"
		android:textColor="@color/white"
		android:background="@color/black"
		android:textSize="20sp" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical">

		<!-- 武器名 -->
		<TextView
			android:id="@+id/textView_wepon_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text=""
			android:textColor="@color/black"
			android:textSize="20sp"
			android:layout_weight="1"
			/>

		<!-- 書き換え用ボタン -->
		<Button
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:layout_marginTop="0dp"
			android:id="@+id/button_wepon"
			android:drawableBottom="@drawable/ic_baseline_edit_24"
			android:layout_gravity="right"
			/>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/black"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical">

		<TextView
			android:id="@+id/textView_wepon_move"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:text="移動修正："
			android:textColor="@color/black"
			android:textSize="20sp" />

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/black"
			/>

		<TextView
			android:id="@+id/textView_wepon_MP"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:text="ＭＰ："
			android:textColor="@color/black"
			android:textSize="20sp" />
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/black"
		/>

	<TextView
		android:id="@+id/textView_wepon_mclass"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="0dp"
		android:text="分類："
		android:textColor="@color/black"
		android:textSize="20sp" />

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/black"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical">

		<TextView
			android:id="@+id/textView_wepon_range"
			android:layout_weight="2"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="射程："
			android:textColor="@color/black"
			android:textSize="20sp" />

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/black"
			/>

		<TextView
			android:id="@+id/textView_wepon_daice"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="判定:"
			android:textColor="@color/black"
			android:textSize="20sp"/>

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/black"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical">

		<TextView
			android:id="@+id/textView_wepon_type"
			android:layout_weight="2"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text=""
			android:textColor="@color/black"
			android:textSize="20sp" />

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/black"
			/>

		<TextView
			android:id="@+id/textView_wepon_scope"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:text=""
			android:textColor="@color/black"
			android:textSize="20sp" />
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/black"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center">

		<TextView
			android:id="@+id/textView_wepon_counter"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="反撃:"
			android:textColor="@color/black"
			android:textSize="20sp" />

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/black"
			/>

		<TextView
			android:id="@+id/textView_wepon_antiair"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="対空:"
			android:textColor="@color/black"
			android:textSize="20sp" />

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/black"
			/>

		<TextView
			android:id="@+id/textView_wepon_flying"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="空中:"
			android:textColor="@color/black"
			android:textSize="20sp" />

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/black"
		/>

	<TextView
		android:id="@+id/textView_wepon_memo"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="0dp"
		android:gravity="center_vertical"
		android:text=" 備考：\n"
		android:textColor="@color/black"
		android:textSize="20sp" />

</LinearLayout>